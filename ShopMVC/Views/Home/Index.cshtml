@model ShopMVC.Models.Page
@using ShopMVC.Helpers;
@{
    ViewBag.Title = "Home";
}
<div class="row" id="productList">
    @foreach (var item in Model.Products)
    {
    <div class="col-sm-4 col-md-3">
        <div class="thumbnail">
            <img src="data:image/svg+xml;base64," alt="Product" data-holder-rendered="true">
            <div class="caption">
                <h3>@item.Title</h3>
                <p>@Html.Trim(item.Description, 30)</p>
                <p>@Html.ActionLink("Buy", "Index", "Product", new { id = item.ProductId }, new { @class = "btn btn-default" })</p>
            </div>
        </div>
    </div>
    }        
</div>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.Pages; i++)
        {
            <li><a href="javascript:void(0)" onclick="goToPage(@i)">@i</a></li>
        }
    </ul>
</nav>