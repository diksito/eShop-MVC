@model ShopMVC.Models.Product
@{
    ViewBag.Title = "Product Details";
}
@section scripts{
<script src="@Url.Content("~/Scripts/cart.js")" type="text/javascript"></script>
}
<div class="panel panel-default" id="productContainer" data-request-url="@Url.HttpRouteUrl("DefaultApi", new { controller = "Shop", method = "" })">
    <div class="panel-heading">@Model.Title</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <img src="data:image/svg+xml;base64," alt="Product" data-holder-rendered="true">
            </div>
            <div class="col-md-8">
                <div class="pull-right">
                    <input class="form-control" style="width: 80px; margin-bottom: 10px;" type="text" id="qty" name="qty" value="1" />
                    <button class="btn btn-primary" onclick="addToBasket('@Model.ProductId', $('#qty').val())">Add to Cart</button>
                    @Html.ActionLink("Check out", "Basket", "Cart", null, new { @class = "btn btn-danger" })
                </div>
                <div><strong>Price:</strong> @Model.Price</div>
            </div>
            <div class="col-md-12"><strong>Description:</strong> @Model.Description</div>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Back", "Index", "Home")
</p>